<div class="container cf">
  <h1 class="hero">Add a Post</h1>

<%= form_for @user, url: category_posts_path(@category) do |f| %>
<div class="row">
<%= f.text_field :username,  placeholder: "username"%>
</div>
<div class="row">
<%= f.password_field :password,  placeholder: "password"%>
</div>
<div class="row">
<%= f.password_field :password_confirmation,  placeholder: "password_confirmation"%>
</div>
<div class="row">
<%= f.submit "login"%>
</div>
<% end %>
</div>

